{% extends 'layout.jinja2' %}


{% block content %}
<script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous"></script>
{# <iframe src="{{ url }}"></iframe> #}
{# <a href="{{ url }}"> link to graph </a> #}


<script>

    jQuery(document).ready(function(){
        $("#tag2").hide()
        $("#data").hide()
        $("#select").change(function(){
            if (this.value == 'bar'){
                $("#tag1").show()
                $("#tag2").hide()
                $("#data").hide()
            }
            else if (this.value == 'pie'){
                $("#tag1").hide()
                $("#tag2").show()
                $("#data").hide()
            }
            else if (this.value == 'job_locations'){
                $("#tag1").show()
                $("#tag2").hide()
                $("data").hide()
            }
            else if (this.value == 'job_type'){
                $("#tag1").hide()
                $("#tag2").show()
                $("#data").hide()
            }
            else if (this.value == 'data'){
                $("#tag1").hide()
                $("#tag2").hide()
                $("#data").show()
            }
        })
    })
</script>



<div id="tag1">{{ tag|safe }}</div>
<div id="tag2">{{ tag2|safe }}</div>

