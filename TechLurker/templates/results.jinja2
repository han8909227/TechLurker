<script>

    jQuery(document).ready(function(){
        $("#tag2").hide()
        $("#data").hide()
        $("#select").change(function(){
            if (this.value == 'bar'){
                $("#tag1").show()
                $("#tag2").hide()
                $("#data").hide()
            }
            else if (this.value == 'pie'){
                $("#tag1").hide()
                $("#tag2").show()
                $("#data").hide()
            }
            else if (this.value == 'job_locations'){
                $("#tag1").show()
                $("#tag2").hide()
                $("data").hide()
            }
            else if (this.value == 'job_type'){
                $("#tag1").hide()
                $("#tag2").show()
                $("#data").hide()
            }
            else if (this.value == 'data'){
                $("#tag1").hide()
                $("#tag2").hide()
                $("#data").show()
            }
        })
    })
</script>



